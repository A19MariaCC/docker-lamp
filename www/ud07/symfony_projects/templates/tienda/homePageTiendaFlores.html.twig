{% extends 'base.html.twig' %}

{% block title %} Tienda DWCS {% endblock %}

{% block body %}

    <div class="container">
        <h1 class="display-4">Lista de productos</h1>
    </div>
    <div class="container">
        <div class="col ps-5">
            <h2 class="mb-4">Productos</h2>
        </div>
            {% for planta in plantas %}
                    <a href="{{planta.enlace}}"><img src="{{ planta.imagen }}" width="100" height="100"></a>
                    <div class="descripcion">
                        {{planta.descripcion}}
                    </div>
            {% endfor %}  
        <p><a href="/listaTiendas">Ver tiendas</a>
{% endblock %}